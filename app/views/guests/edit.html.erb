<h1>Modifier un invité</h1>

<%= turbo_frame_tag :edit_form do %>
  <%= simple_form_for @guest do |f| %>
    <%= f.input :first_name, label: 'Prénom' %>
    <%= f.input :last_name, label: 'Nom' %>
    <%= f.input :email, label: 'Email' %>
    <%= f.input :phone, label: 'Téléphone' %>
  <% end %>
<% end %>
