<h1>Pages#rsvp</h1>

<div class="mt-8">
  <div id="guests">
    <div data-controller="search-guest">
      <%= simple_form_for rsvp_path do |form_search| %>
        <%= form_search.input :search, label: 'Chercher un nom', collection: Guest.all, label_method: :full_name, value_method: :id, input_html: { data: { search_guest_target: "input", action: "change->search-guest#search" }} %>
      <% end %>
      <div class="mt-4">
        <%= turbo_frame_tag "edit_form", data: { search_guest_target: "editFrame" } do %>
        <% end %>
      </div>
    </div>
  </div>
</div>
